<div class="container-fluid">
  <div class="row min-vh-100 flex-column flex-md-row">
    <aside class="col-12 col-md-2 p-0 bg-dark flex-shrink-1">
      <nav class="navbar navbar-expand navbar-dark bg-dark flex-md-column flex-row align-items-start py-2">
        <div class="collapse navbar-collapse ">
          <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
            <li class="nav-item">
              <div class="nav-link pl-0 text-nowrap">
              <i class="fas fa-chart-line"></i> 
              <span class="font-weight-bold">Stock Trading App</span></div>
            </li>
            <li class="nav-item">
              <%= link_to 'Home', home_index_path, class: "nav-link px-sm-0 px-2" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Portfolio', buyers_stocks_path, class: "nav-link px-sm-0 px-2" %>
            </li>
          </ul>
        </div>
      </nav>
    </aside>
    <main class="col bg-faded py-3 flex-grow-1">
      <h1>Available Stocks</h1>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr class="text-center">
            <th scope="col">Ticker</th>
            <th scope="col">Company</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Amount</th>
            <th scope="col">Broker</th>
            <th scope="col">Id</th>
            <th scope="col-md-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @broker_stocks.each do |@stock| %>
          <tr class="text-center">
            <td scope="row"><%= @stock.ticker %></td>
            <td scope="row"><%= @stock.company %></td>
            <td scope="row"><%= @stock.price %></td>
            <td scope="row"><%= @stock.quantity %></td>
            <td scope="row"><%= @stock.price * stock.quantity %></td>
            <td scope="row"><% @stock.id %></td>
            <td scope="row"><%= @stock.user.email %></td>
            <td scope="row"><%= link_to 'Buy', new_buyers_stock_path(@stock), class: "btn btn-success" %>
          </tr>
          <% end %>
        </tbody>
      <table>
    </main>
  </div>
</div>