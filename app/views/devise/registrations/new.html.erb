

<%=stylesheet_link_tag "sessions"%>

 
    <div class="container">
    <div class="row px-3">
      <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
        <div class="img-left d-none d-md-flex"></div>

        <div class="card-body">
          <h4 class="title text-center mt-4">
            Register an Account
          </h4>
          <%=simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-box px-3">
            <div class="form-input">
            <%= f.input:email, autofocus: true, autocomplete: "email", label:false,class:'w-100 mb-2 rounded',placeholder:'enter your email' %>
            </div>
            <div class="form-input">
             <%= f.input :password, autocomplete: "current-password" ,label:false, class:'w-100 rounded ',placeholder:'enter your password'%>     
            </div>
            <div class="form-input">
             <%= f.input :password_confirmation, placeholder:'confirm your password',label:false%>     
            </div>
    
             <%= f.input :roles,as: :radio_buttons, collection:Role.where.not(name:'admin'), label:false,value_method: :name, class:"input-group-text", required: true  %>     
      
            <div class="mt-3">
             <%= f.submit "Sign Up",class:"btn btn-sm btn-primary btn-block text-uppercase"%>
            </div>

            <div class="text-right">
           <%= render "devise/shared/links" %>

         
            </div>
            </div>
<% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>